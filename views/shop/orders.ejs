<%- include('../partials/head.ejs') %>
    </head>

    <body>
        <%- include('../partials/navigation.ejs') %>
<section class="branding-banner">
    <div class="branding-content">
        <img src="/images/dino-icon.jpg" alt="Dino Logo" class="branding-icon">
        <h1 class="branding-title">Zalandino</h1>
    </div>
</section>        
        <main>
            <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1> <%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a> </h1>
                            <ul> <% order.items.forEach(item => { %>
                                <li><%= item.productData.title %> (<%= item.qty %>)</li>
                                <% });%>
                            </ul>
                        </li>
                        <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../partials/end.ejs') %>