<%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="/css/cart.css">
  <%# add meta tags; HTML not scripts so safe for CSP perspectives %>
  <meta name="stripe-public-key" content="<%= stripePublicKey %>">
  <meta name="stripe-session-id" content="<%= sessionId %>">
    </head>

    <body>
        <%- include('../partials/navigation.ejs') %>
<section class="branding-banner">
    <div class="branding-content">
        <img src="/images/dino-icon.jpg" alt="Dino Logo" class="branding-icon">
        <h1 class="branding-title">Zalandino</h1>
    </div>
</section>
        <main>
            <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <h1><%= p.productID.title %></h1>
                            <h2>Quantity: <%= p.qty %></h2>
                        </li>
                    <% }) %>
            </ul>
            <div class="centered"><h2>Total: <%= totalSum %></h2></div>
            <div class="centered">
                <button id="order-btn" class="btn">ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script src="/js/stripe.js"></script>
            </div>
        </main>
        <%- include('../partials/end.ejs') %>